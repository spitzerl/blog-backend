# Variables d'environnement pour Docker local
# Ce fichier est utilisé spécifiquement pour l'environnement Docker de développement

NODE_ENV=development
PORT=3001

# Base de données PostgreSQL (Docker)
DATABASE_URL="postgresql://bloguser:password@postgres:5432/blogdb"

# JWT Configuration (développement)
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="24h" 
JWT_REFRESH_SECRET="dev-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Administrateur initial
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# Seeding automatique
SEED_DB="true"

# Rate limiting (plus permissif en dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Upload configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Configuration Docker spécifique
DOCKER_ENV="true"